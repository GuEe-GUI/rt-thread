menuconfig RT_USING_RESET
    bool "Using Reset Controller support"
    depends on RT_USING_DM
    select RT_USING_OFW
    default n

config RT_RESET_BRCMSTB_RESCAL
    bool "Broadcom STB RESCAL reset controller"
    depends on RT_USING_RESET
    default n

config RT_RESET_BRCMSTB
    bool "Broadcom STB reset controller"
    depends on RT_USING_RESET
    default n

config RT_RESET_RASPBERRYPI
    bool "Raspberry Pi 4 Firmware Reset Driver"
    depends on RT_USING_RESET
    select RT_FIRMWARE_RASPBERRYPI
    default n

config RT_RESET_SCMI
    bool "Reset driver controlled via ARM SCMI interface"
    depends on RT_USING_RESET
    depends on RT_FIRMWARE_ARM_SCMI
    default n
