from building import *

group = []

if not GetDepend(['RT_USING_REGULATOR']):
    Return('group')

cwd = GetCurrentDir()
CPPPATH = [cwd + '/../include']

src = ['regulator.c', 'regulator_dm.c']

if GetDepend(['RT_REGULATOR_FAN53555']):
    src += ['regulator-fan53555.c']

if GetDepend(['RT_REGULATOR_FIXED']):
    src += ['regulator-fixed.c']

if GetDepend(['RT_REGULATOR_GPIO']):
    src += ['regulator-gpio.c']

if GetDepend(['RT_REGULATOR_PWM']):
    src += ['regulator-pwm.c']

if GetDepend(['RT_REGULATOR_RK8XX']):
    src += ['regulator-rk8xx.c']

if GetDepend(['RT_REGULATOR_SCMI']):
    src += ['regulator-scmi.c']

group = DefineGroup('DeviceDrivers', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
